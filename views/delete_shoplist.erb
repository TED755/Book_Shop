<form method="post">
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>Выберите список, который хотите удалить, и введите его индекс</h2>
        <ol>
          <% @lists.each do |pos| %>
            <li>
              <%= pos.info%>
              Итого:<%= pos.total%>
            </li>        
          <% end %>
        </ol>
        <input type="number" class="form-control" id="index" name="index" placeholder="Введите номер">
        <% if @errors %>
          <%= @errors%>
        <% end %>
        </div>
      </div>
      <button type="delete" class="btn btn-primary">Удалить список</button>
    </div>  
  </div> 
</form>